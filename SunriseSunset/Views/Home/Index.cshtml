@model SunriseSunset.Models.CitiesListViewModel
@{
    ViewBag.Title = "Sunrise Sunset";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<form method="get">
    <div class="form-inline">
        <div class="form-group">
            <label class="control-label">City: </label>
            @Html.DropDownList("City", Model.CitySelectList as SelectList, string.Empty,
                htmlAttributes: new { @class = "form-control" })

            <label class="control-label">Sunrise or Sunset: </label>
            @Html.DropDownList("SunriseSunset", Model.OperationTypes as SelectList, string.Empty,
                htmlAttributes: new { @class = "form-control" })

            <input type="submit" value="Фильтр" class="btn btn-default" />
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <th>
            City
        </th>
        <th>
            Sunrise
        </th>
        <th>
            Sunset
        </th>
        
    </tr>
    
    @foreach (var item in Model.Cities) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sunrise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sunset)
            </td>
            
        </tr>
    }
    
</table>
</body>
</html>